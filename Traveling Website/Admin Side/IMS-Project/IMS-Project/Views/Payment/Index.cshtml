@model IMS_Project.Models.SupplierQoutation

@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Form Example</title>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

    <style>
        /* CSS for alignment and styling */
        label {
            display: inline-block;
            width: 120px;
        }

        select, input[type="number"], input[type="text"] {
            width: 70%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-top: 20px;
        }

        input[type="submit"] {
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            width: 40%;
            margin-left: 26%;
            margin-top: 20px;
        }

        h1 {
            margin-top: 5%;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 3%;
            margin-bottom: 10%;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tbody tr:hover {
            background-color: #ddd;
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#datepicker").datepicker();
        });
    </script>
</head>

<body>
    <h2>Supplier Quotation Details</h2>

    <form method="post" action="@Url.Action("Index", "Payment")">
        <label for="supplierQuotationId">Select Supplier Quotation ID:</label>
        @Html.DropDownList("selectedSupplierQoutationID", (IEnumerable<SelectListItem>)ViewBag.SupplierQuotations, "Select an ID")
        <br>
        <input type="submit" value="Submit">
    </form>

    <table>
        <tr>
            <th>Supplier Quotation ID</th>
            <th>ReqQoutationID</th>
            @*<th>Product</th>*@
            <th>Supplier</th>
            @*<th>Quantity Needed</th>
            <th>Supplier Quantity</th>
            <th>Unit Price</th>*@
            <th>Total Price</th>
            <th>Date</th>
            <th></th>
        </tr>
        @if (Model != null)
        {
            <tr>
                <td>@Model.SupplierQoutationID</td>
                <td>@Model.ReqQoutationID</td>
                @*<td>@Model.Product</td>*@
                <td>@Model.Supplier</td>
                @*<td>@Model.QuantityNeeded</td>
                <td>@Model.SupplierQuantity</td>
                <td>@Model.UnitPrice</td>*@
                <td>@Model.TotalPrice</td>
                <td>@Model.Date</td>
                <td>
                    <a href="@Url.Action("PrintPDF", "Payment", new { selectedSupplierQoutationID = Model != null ? Model.SupplierQoutationID : (int?)null })">
                        <img src="print-icon.png" alt="Print Icon">
                    </a>
                </td> <!-- Add the print icon in the last column -->

            </tr>
        }
    </table>

    <br />

    <a href="@Url.Action("Index", "Payment")">Back to Supplier Quotations</a>
</body>
</html>
